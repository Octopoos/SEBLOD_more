<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="cck_field_validation" version="2.5" method="upgrade">
	<name>plg_cck_field_validation_ipv4</name>
	<author>Octopoos</author>
	<authorEmail>contact@seblod.com</authorEmail>
	<authorUrl>http://www.seblod.com</authorUrl>
	<copyright>Copyright (C) 2013 SEBLOD. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<creationDate>April 2013</creationDate>
	<description>SEBLOD 3.x - www.seblod.com // by Octopoos - www.octopoos.com</description>
	<version>1.0.0</version>
	
	<scriptfile>install/script.php</scriptfile>
	
	<files>
		<folder>install</folder>
		<folder>tmpl</folder>
		
		<filename plugin="ipv4">ipv4.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_validation_ipv4.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_validation_ipv4.sys.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_cck_field_validation_ipv4.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_cck_field_validation_ipv4.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="/libraries/cck/construction/field">
			<fieldset name="basic">
				<field name="alert" type="text" default="PLG_CCK_FIELD_VALIDATION_IPV4_ALERT" label="LIB_CCK_ALERT_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_ALERT_DESC" disabled="true" />
			</fieldset>
			
			<fieldset name="advanced">
				<field name="group" type="text" default="PLG_CCK_FIELD_VALIDATION_GROUP_INTERNET" label="LIB_CCK_GROUP_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_GROUP_DESC" />
				<field name="export" type="cckexport" default="" label="LIB_CCK_EXPORT_LABEL" description="LIB_CCK_FIELD_VALIDATION_EXPORT_DESC" />
			</fieldset>
		</fields>
	</config>
	
	<updateservers>
		<server type="extension" priority="1" name="IPv4 Validation Plug-in Updates">http://update.seblod.com/plg_cck_field_validation_ipv4.xml</server>
	</updateservers>
</extension>