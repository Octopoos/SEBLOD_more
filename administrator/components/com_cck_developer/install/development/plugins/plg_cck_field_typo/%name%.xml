<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="cck_field_typo" version="2.5" method="upgrade">
	<name>plg_cck_field_typo_%name%</name>
	<author>%author%</author>
	<authorEmail>%author_email%</authorEmail>
	<authorUrl>%author_url%</authorUrl>
	<copyright>%copyright%</copyright>
	<license>%license%</license>
	<creationDate>%creation_date%</creationDate>
	<description>%description%</description>
	<version>%version%</version>
	
	<scriptfile>install/script.php</scriptfile>
	
	<files>
		<folder>assets</folder>
		<folder>install</folder>
		<folder>tmpl</folder>
		
		<filename plugin="%name%">%name%.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_typo_%name%.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_typo_%name%.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="/libraries/cck/construction/field">
			<fieldset name="basic">
				<field name="" type="spacer" hr="false" />
			</fieldset>
			
			<fieldset name="advanced">
				<field name="group" type="text" default="PLG_CCK_FIELD_TYPO_GROUP_%GROUP%" label="LIB_CCK_GROUP_LABEL" size="60" description="LIB_CCK_FIELD_TYPO_GROUP_DESC" />
				<field name="export" type="cckexport" default="" label="LIB_CCK_EXPORT_LABEL" description="LIB_CCK_FIELD_TYPO_EXPORT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>